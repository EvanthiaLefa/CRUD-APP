<% layout('layouts/boilerplate') %>

    <body>
        <div class="row">
            <h1 class="text-center">Edit Student</h1>
            <div class="col-6 offset-3">
                <form action="/students/<%=student._id%>?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label for="studentFirstName" class="form-label">Student FirstName:</label>
                        <input type="text" name="firstName" id="studentFirstName" placeholder="FirstName" class="form-control" value="<%=student.firstName%>">
                    </div>
                    <div class="mb-3">
                        <label for="studentLastName" class="form-label">Student LastName:</label>
                        <input type="text" name="lastName" id="studentLastName" placeholder=" LastName"class="form-control" value="<%=student.lastName%>">
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-info">Update</button>
                    </div>
                </form>
                <a href="/students/<%=student._id%>">Back</a>
            </div>
        </div>
    </body>