<% layout('layouts/boilerplate') %>

    <body>
        <div class="row">
            <h1 class="text-center"> Edit Course</h1>
            <div class="col-6 offset-3">
                <form action="/courses/<%=course._id%>?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label for="courseName" class="form-label">Course Name:</label>
                        <input type="text" name="name" id="courseName" placeholder="course name" value="<%= course.name %>" class="form-control">
                    </div>
                    <div class="mb-3">
                        <fieldset>
                            <label class="form-label">Choose One Trainer for Course:</label>
                            <div>
                                <% for(let trainer of trainers){ %>
                                    <input class="form-check-input" type="checkbox" id="trainer" name="trainer" value="<%= trainer.lastName  %> <%= trainer.firstName %>">
                                    <label class="form-check-label" for="trainer" class="form-label">
                                        <%= trainer.lastName %> <%= trainer.firstName %>
                                    </label>
                                    <% } %>
                            </div>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <fieldset>
                            <label class="form-label">Choose Students for Course:</label>
                            <div>
                                <% for(let student of students){ %>
                                    <input class="form-check-input" type="checkbox" id="student" name="students" value="<%= student.lastName %> <%= student.firstName  %>">
                                    <label class="form-check-label" for="student">
                                        <%= student.lastName %> <%= student.firstName %>
                                    </label>
                                    <% } %>
                            </div>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <fieldset>
                            <label class="form-label">Choose An Assignment for Course:</label>
                            <div>
                                <% for(let assignment of assignments){ %>
                                    <input class="form-check-input" type="checkbox" id="assignment" name="assignments" value="<%=assignment.title%>">
                                    <label class="form-check-label" for="assignment">
                                        <%=assignment.title%>
                                    </label>
                                    <% } %>
                            </div>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-info">Update Course</button>
                    </div>
                </form>
                <a href="/courses/<%=course._id%>">Back to <%=course.name%></a>
            </div>
        </div>
    </body>
